<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nilhcem.xebia.essentials"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="15" />

    <application
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/XebiaTheme" >
        <activity
            android:name="SplashScreenActivity_"
            android:noHistory="true"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="essentials.xebia.com"
                    android:scheme="http" >
                </data>
            </intent-filter>
        </activity>
        <activity android:name=".cards.list.CardsListActivity_" />
        <activity android:name=".cards.html.CardsHtmlActivity_" />
        <activity
            android:name=".settings.SettingsActivity_"
            android:noHistory="true" />
    </application>

</manifest>
