<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/listing_category_color"
        android:layout_width="6dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/listing_divider"
        android:layout_alignParentTop="true"
        tools:background="@color/xebia_purple"/>

    <TextView
        android:id="@+id/listing_text"
        fontPath="fonts/Roboto-Light.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/listing_category_color"
        android:gravity="center_vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="16dp"
        android:textSize="20sp"
        tools:text="Be curious"/>

    <!-- Custom list divider there to make the UI look better (divider doesn't break the category color alignment) -->
    <View
        android:id="@+id/listing_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/listing_text"
        android:layout_toRightOf="@id/listing_category_color"
        android:background="@color/listing_divider"/>
</RelativeLayout>
