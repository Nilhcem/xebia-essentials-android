<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:weightSum="100">

    <fragment
        android:id="@+id/main_listing_fragment"
        android:name="com.nilhcem.xebia.essentials.ui.cards.listing.ListingFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="35"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#ffcfcfcf"/>

    <fragment
        android:id="@+id/main_detail_fragment"
        android:name="com.nilhcem.xebia.essentials.ui.cards.detail.pager.DetailPagerFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="65"/>
</LinearLayout>
