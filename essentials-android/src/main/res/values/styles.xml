<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AboutTitle">
        <item name="android:paddingBottom">10dp</item>
        <item name="fontPath">fonts/RobotoCondensed-Bold.ttf</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/xebia_purple</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="AboutContent">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">@color/xebia_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorLink">@color/xebia_purple</item>
    </style>

    <style name="ActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/xebia_white</item>
    </style>
</resources>
