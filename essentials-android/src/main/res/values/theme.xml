<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Xebia" parent="Theme.AppCompat.Light">

        <!-- Action Bar color -->
        <item name="colorPrimary">@color/xebia_purple</item>

        <!-- Status Bar color -->
        <item name="colorPrimaryDark">@color/xebia_purple_dark</item>

        <!-- Tint color -->
        <item name="colorAccent">@color/xebia_purple</item>

        <!-- Action Bar text + icons color -->
        <item name="android:textColorPrimary">@color/actionbar_content</item>

        <!-- Navigation Bar color -->
        <item name="android:navigationBarColor">@color/xebia_purple</item>

        <!-- enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>

        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>
    </style>
</resources>
